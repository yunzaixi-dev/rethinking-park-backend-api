# Staging Environment Configuration
# Production-like environment for testing

# Application Settings
APP_ENV=staging
DEBUG=false
APP_NAME=Rethinking Park Backend API (Staging)
APP_VERSION=staging
LOG_LEVEL=INFO

# API Configuration
API_V1_STR=/api/v1
ALLOWED_ORIGINS=https://staging.your-frontend-domain.com,https://staging-api.your-domain.com

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=rethinking-park-staging
GCS_BUCKET_NAME=rethinking-park-images-staging
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Redis Configuration
REDIS_ENABLED=true
REDIS_URL=redis://redis:6379/0
CACHE_TTL_HOURS=12

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=20

# Performance Configuration
PERFORMANCE_OPTIMIZATION_ENABLED=true
MAX_CONCURRENT_OPERATIONS=8
BATCH_PROCESSING_ENABLED=true
MEMORY_OPTIMIZATION_ENABLED=true
MAX_MEMORY_MB=768

# Monitoring and Logging
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true