# Local Development Environment Configuration
# This file contains default values for local development

# Application Settings
APP_ENV=local
DEBUG=true
APP_NAME=Rethinking Park Backend API (Local)
APP_VERSION=dev
LOG_LEVEL=DEBUG

# API Configuration
API_V1_STR=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,*

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=rethinking-park-local
GCS_BUCKET_NAME=rethinking-park-images-local
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Redis Configuration
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_HOURS=1

# Feature Configuration (lenient for local development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=1000
ENABLE_DUPLICATE_DETECTION=true
SIMILARITY_THRESHOLD=5

# Performance Configuration (disabled for development)
PERFORMANCE_OPTIMIZATION_ENABLED=false
MAX_CONCURRENT_OPERATIONS=5
BATCH_PROCESSING_ENABLED=false
MEMORY_OPTIMIZATION_ENABLED=false

# Development Features
ENABLE_AUTO_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true