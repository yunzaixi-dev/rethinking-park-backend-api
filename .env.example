# 环境变量配置示例
# Environment Variables Configuration Example
# 复制此文件为 .env 并根据你的环境修改配置值
# Copy this file to .env and modify the configuration values according to your environment

# =============================================================================
# 应用配置 / Application Configuration
# =============================================================================
APP_NAME=Rethinking Park Backend API
APP_VERSION=2.0.0
DEBUG=true
ENVIRONMENT=development
API_V1_STR=/api/v1

# =============================================================================
# 文件上传配置 / File Upload Configuration
# =============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.bmp,.webp

# =============================================================================
# CORS配置 / CORS Configuration
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# 速率限制配置 / Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# =============================================================================
# 数据库配置 / Database Configuration
# =============================================================================
# 可以使用 DATABASE_URL 或者分别配置各个参数
# You can use DATABASE_URL or configure each parameter separately
DATABASE_URL=
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=rethinking_park_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password

# 数据库连接池配置 / Database Connection Pool Configuration
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false
DATABASE_ECHO_POOL=false

# 读写分离配置 / Read-Write Split Configuration
READ_DATABASE_URL=
ENABLE_READ_WRITE_SPLIT=false

# =============================================================================
# Redis缓存配置 / Redis Cache Configuration
# =============================================================================
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_USERNAME=

# Redis连接池配置 / Redis Connection Pool Configuration
REDIS_MAX_CONNECTIONS=10
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# =============================================================================
# 缓存TTL配置 / Cache TTL Configuration
# =============================================================================
CACHE_TTL_HOURS=24
CACHE_TTL_SECONDS=86400
SHORT_CACHE_TTL_SECONDS=300
LONG_CACHE_TTL_SECONDS=604800

# =============================================================================
# 内存缓存配置 / Memory Cache Configuration
# =============================================================================
MEMORY_CACHE_ENABLED=true
MEMORY_CACHE_MAX_SIZE=1000
MEMORY_CACHE_TTL_SECONDS=300

# =============================================================================
# 缓存键前缀 / Cache Key Prefix
# =============================================================================
CACHE_KEY_PREFIX=rethinking_park

# =============================================================================
# 图像哈希配置 / Image Hash Configuration
# =============================================================================
ENABLE_DUPLICATE_DETECTION=true
SIMILARITY_THRESHOLD=5

# =============================================================================
# Google Cloud配置 / Google Cloud Configuration
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json
GOOGLE_CLOUD_REGION=us-central1

# =============================================================================
# Google Vision API配置 / Google Vision API Configuration
# =============================================================================
GOOGLE_VISION_ENABLED=true
GOOGLE_VISION_MAX_RESULTS=10
GOOGLE_VISION_TIMEOUT=30

# =============================================================================
# 监控配置 / Monitoring Configuration
# =============================================================================
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=8000
METRICS_ENDPOINT=/metrics

# =============================================================================
# 日志配置 / Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=
LOG_MAX_SIZE=104857600
LOG_BACKUP_COUNT=5

# =============================================================================
# 健康检查配置 / Health Check Configuration
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# 外部API配置 / External API Configuration
# =============================================================================
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRIES=3
EXTERNAL_API_BACKOFF_FACTOR=0.3

# =============================================================================
# Webhook配置 / Webhook Configuration
# =============================================================================
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT=10